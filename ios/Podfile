platform :ios, '14.0'

# Esta función es la que fallaba antes; ahora la dejamos vacía para que 
# Flutter la maneje externamente desde el comando de terminal.
target 'Runner' do
  use_frameworks!
  use_modular_headers!
  
  # Eliminamos la línea conflictiva de 'flutter_install_all_ios_pods'
  # porque la ejecutaremos vía comando de Flutter directamente.
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '14.0'
      config.build_settings['ENABLE_BITCODE'] = 'NO'
    end
  end
end
